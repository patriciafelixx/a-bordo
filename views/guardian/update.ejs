<%- include("../partials/header.ejs", {title: "aBordo - Cadastrar"}) %>
</head>

<body>
  <header>
    <a href="/" id="logo">
      <img class="logo" src="../images/airplane.svg" alt="">
      <h1 class="logo">aBordo</h1>
    </a>
  </header>

  <nav>
    <h2>Cadastrar</h2>
    <div class="navbar">
      <ul class="nav">
        <li>
          <a class="nav-link" href="#set-user">
            Dados pessoais
          </a>
        </li>
        <li>
          <a class="nav-link" href="#set-schools">
            Filhos
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <main id="register-guardian">
    <form id="create" action="/responsavel/atualizar?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="on">
      <div data-spy="scroll" data-target=".navbar" data-offset="450">
        <section id="set-user">
          <div class="add-pic">
            <label for="pic-file" class="add-pic">
              <img src="../<%= user.picture %>" alt="avatar" id="user-pic" width="176px" height="176px" />
              <div id="text-on-hover"><span>Nova imagem</span></div>
            </label>
            <input type="file" name="picture" id="pic-file" onchange="addPic()" />
          </div>

          <div id="full-name">
            <input type="text" name="forename" id="name" value="<%= user.forename %>" placeholder="Nome" />

            <input type="text" name="surname" id="surname" value="<%= user.surname %>" placeholder="Sobrenome" />
          </div>
          <div id="contact-info">
            <input type="email" name="email" id="email" value="<%= user.email %>" placeholder="E-mail" />

            <input type="tel" name="phone" id="phone" value="<%= user.phone %>" placeholder="Celular" />
          </div>
          <div id="add-password">
            <div class="password">
              <input type="password" name="password" id="password" placeholder="Senha" />
              <div class="eye-icon" id="eye-icon-1" onclick="toogleVisibility()"></div>
            </div>

            <div class="password">
              <input type="password" name="confirm-password" id="confirm-password" placeholder="Confirme a senha" />
              <div class="eye-icon" id="eye-icon-2" onclick="toogleVisibility()"></div>
            </div>
          </div>
          <ul id="password-strength">
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li>Força da senha</li>
          </ul>
          <ul>
            <li><span>x</span> Minúscula</li>
            <li><span>x</span> Maiúscula</li>
            <li><span>x</span> Número</li>
            <li><span>x</span> Símbolo</li>
            <li><span>x</span> 8 caracteres</li>
          </ul>
        </section>

        <section id="set-schools">
          <div id="new-schools">
            <div class="instances-list schools">
              <button type="button" class="selected school1" onclick="select()">
                Filho 1
              </button>
            </div>
            <button type="button" class="btn-add" id="add-school" onclick="addInstance()">
              +
            </button>
            <button type="button" class="btn-del" id="del-school" onclick="delInstance()" disabled>
              Excluir
            </button>
          </div>
          <div class="gray-box">
            <div class="school-location">
              <select name="selectState" id="state-school1" required>
                <option disabled selected>UF</option>
              </select>

              <select name="selectCity" id="municipality-school1" disabled required>
                <option disabled selected>Município</option>
              </select>
            </div>

            <select name="selectSchool" id="school1" disabled required>
              <option disabled selected>Nome da escola</option>
              </option>
            </select>

            <select name="selectClass">
              <option disabled selected>Turma</option>
            </select>

            <select name="selectStudent">
              <option disabled selected>Aluno</option>
            </select>
          </div>

          <button type="submit" class="special">Finalizar e levantar voo!</button>
        </section>

      </div>
    </form>
  </main>

  <script src="/javascripts/api.js"></script>
  <%- include("../partials/footer.ejs") %>